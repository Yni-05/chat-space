.side-bar
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user
      .side-header__box__menu
        .side-header__box__menu__new-group
          = link_to new_group_path , class: "top-items__icons-btn" do
            = icon('fas', 'edit')
        .side-header__box__menu__edit-user
          = link_to edit_user_registration_path , class: "top-items__icons-btn" do
            = icon('fas', 'cog')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message